%h4 Search Hotel
%div
  %h5
    Destination/hotel name:
    %br/
    %input.span12{:placeholder => "Madrid", :type => "text"}/
  %h5
    Distance
    %select.span7{:placeholder => "10 km"}
      - for i in 1..10 do
        %option
          = i*10
          km
  %h5
    Check-in date
    %br/
    %select.span4
      %option 1
      - for i in 2..31 do
        %option= i
    %select.span8
      %option Aug, 2013
      %option Sep, 2013
      %option Oct, 2013
      %option Nov, 2013
      %option Dec, 2013
      %option Jan, 2014
      %option Feb, 2014
      %option Mar, 2014
      %option Apr, 2014
      %option May, 2014
      %option Jun, 2014
      %option Jul, 2014
  %h5
    Check-out date
    %br/
    %select.span4
      %option 1
      - for i in 2..31 do
        %option= i
    %select.span8
      %option Aug, 2013
      %option Sep, 2013
      %option Oct, 2013
      %option Nov, 2013
      %option Dec, 2013
      %option Jan, 2014
      %option Feb, 2014
      %option Mar, 2014
      %option Apr, 2014
      %option May, 2014
      %option Jun, 2014
      %option Jul, 2014
  .row-fluid
    %h6.span4
      Adults
      %br/
      %select.span11{:placeholder => "0"}
        - for i in 1..10 do
          %option= i
    %h6.span4{:placeholder => "0"}
      Children
      %br/
      %select.span11
        - for i in 0..10 do
          %option= i
    %h6.span4
      Infants
      %br/
      %select.span11{:placeholder => "0"}
        - for i in 0..10 do
          %option
            = i
    / /span4
  %h5
    Rooms
    %select.span4{:placeholder => "1"}
      - for i in 1..10 do
        %option{:value => i}
          = i
  %button.btn.btn-primary{:type => "submit"} Search Hotels
